extends layout 

block content
  h1 #{title}: #{category.name}

  if allModelsInCategory.length

    p #[strong Delete the following models before attempting to delete this category]

    div

      h4 Models

      dl 
      each model in allModelsInCategory 
        dt 
          a(hred=model.url) #{model.manufacturer} #{model.name}
        dd
  
  else 
    p Do you really want to delete this category?

    form(method="POST", action="")
      div(class="form-group")
        input(class="form-control" type="hidden", name="categoryid" required="true", value=category._id)
      
      button(class="button-primary" type="submit") Delete